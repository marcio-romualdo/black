@model Usuario
@{
    ViewData["Title"] = "Edição de Usuário";
}
<div class="container">
    <h2 class="text-center">Edição de Usuário</h2>
    <div class="container">
        <form asp-action="Editar" method="POST">
            <p>Selecione seu nome de Usuário para edição!</p>
            <div class="form-group row">
                <label asp-for="Nome" class="col-sm-2 col-form-label">Usuario:</label>
                 <select id="pacotesselect" asp-for="Id">
            @foreach(Usuario u in Repositorio.QueryPacotes()){
                <option value="@u.Id">@u.Nome</option>   
            }    
        </select>            
            </div>
            <div class="form-group row">
                <label asp-for="Nome" class="col-sm-2 col-form-label">Nome:</label>
                <input asp-for="Nome" type="text" placeholder="Novo nome" required/>
            </div>
            <div class="form-group row">
                <label asp-for="Login" class="col-sm-2 col-form-label">Login:</label>
                <input asp-for="Login" type="text" placeholder="Novo login" required/>
            </div>
            <div class="form-group row">
                <label asp-for="Senha" class="col-sm-2 col-form-label">Senha:</label>
                <input asp-for="Senha" type="password" placeholder="Nova senha" required/>
            </div>
            <div class="form-group row">
                <label asp-for="Permissao" class="col-sm-2 col-form-label">Privilégio:</label>
                <div col-sm-10>
                    <select class="form-control" asp-for="Permissao"> 
                        <option value="Administrador">Administrador</option>
                        <option value="Funcionário">Funcionário</option>
                    </select>
                </div>
            </div> 
            <div class="form-group row">
                <p>
                    <input type="submit" value="Editar Usuário" class="btn btn-primary mb-2"/>
                </p>
            </div>   
        </form>
        <a class="btn btn-primary" asp-area="" asp-controller="Logado" asp-action="Administrador">Voltar</a>
    </div>
</div>   
